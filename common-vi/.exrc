set noexrc

set showmode
set noerrorbells    " no audible bell
set flash           " visual bell

set number          " line numbers
set ruler           " show current line and column number
set showmatch       " matching () and {}
set report=1        " show how many lines were affected

set ignorecase      " in search

set autoindent
set shiftwidth=8

" Use spaces instead of tabs
set expandtab
